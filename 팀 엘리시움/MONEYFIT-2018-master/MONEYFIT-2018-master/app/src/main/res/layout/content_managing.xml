<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/manage_shape2"
    android:orientation="vertical"

    tools:context=".MoneyManaging"
    tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.40"

        android:orientation="horizontal">


        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="123dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:layout_weight="0.45"
            app:cardCornerRadius="8dp">


            <ImageView
                android:id="@+id/moneyview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />


        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="0.55"
            android:orientation="vertical">

            <TextView
                android:id="@+id/moneyname"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"


                android:layout_marginLeft="15dp"
                android:layout_weight="0.4"


                android:gravity="left"
                android:text="문화상품권"
                android:textSize="10pt"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="0.8"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"

                    android:layout_margin="8dp"

                    android:src="@drawable/manage_coin" />

                <TextView
                    android:id="@+id/much"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="left"
                    android:padding="4dp"
                    android:text="5000"
                    android:textSize="5pt"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="30dp"
        android:layout_weight="0.4"
        android:background="@drawable/manage_shape"

        android:shape="oval">

        <TextView
            android:id="@+id/contents"
            android:layout_width="wrap_content"


            android:layout_height="208dp"
            android:layout_margin="4dp"
            android:layout_marginLeft="19dp"
            android:gravity="left"
            android:padding="4dp"
            android:text="물건에 대한 설명들~~~!!#!~#!~#~"
            android:textSize="10pt" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="30dp"
        android:layout_weight="0.2">


        <!--     <ImageView
            android:id="@+id/buy"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"

            android:background="@drawable/shape"
            android:src="@drawable/buy" />
-->
        <Button
            android:id="@+id/buy"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_round_activated_color"
            android:text="@string/mangement_buy"
            android:textSize="12dp" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="top"
            android:layout_marginLeft="50dp"
            android:background="@drawable/btn_round_activated_color"
            android:text="@string/mangement_buy_cancel"
            android:textSize="12dp" />
        <!--<ImageView
            android:id="@+id/cancel"
            android:layout_width="86dp"
            android:layout_height="31dp"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/shape"
            android:src="@drawable/cancel" />

-->
    </LinearLayout>
</LinearLayout>